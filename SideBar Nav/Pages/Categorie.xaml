<Page x:Class="TheClassMain.Pages.Categorie"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TheClassMain.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Categorie"
      Loaded="Page_Loaded">

    <Grid>
        <Border Background="White" CornerRadius="10" Margin="20,20,20,0" Padding="20" BorderBrush="#dcdde1" BorderThickness="1">
            <StackPanel>

                <TextBlock Text="Liste des categories" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListView x:Name="CategoriesListView" ItemsSource="{Binding CategorieList}" Height="150" SelectionChanged="CategoriesListView_SelectionChanged">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Numero" DisplayMemberBinding="{Binding Id}" />
                            <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Name}" />
                            <GridViewColumn Header="Active" DisplayMemberBinding="{Binding IsActive}" />
                        </GridView>
                    </ListView.View>
                </ListView>

                <Separator Margin="0,15,0,15"/>

                <TextBlock Text="Nouvelle categorie" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Nom:" Width="100" VerticalAlignment="Center"/>
                    <TextBox x:Name="NameTextBox" Width="300" Padding="5"/>
                    <Button Content="Ajouter"
                            Click="Button_Click"
                            Width="100"
                            Margin="10,0,0,0"
                            Padding="5"
                            Background="Gray"
                            Foreground="White"
                            BorderBrush="Transparent"
                            FontWeight="Bold"
                            Cursor="Hand"
                            VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Active:" Width="100" VerticalAlignment="Center"/>
                    <CheckBox x:Name="ActiveCheckBox" Width="300" Padding="5"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Left">
                    <Button Content="Mettre a jour"
                            Click="UpdateButton_Click"
                            Width="120"
                            Margin="0,0,10,0"
                            Padding="5"
                            Background="#28a745"
                            Foreground="White"
                            BorderBrush="Transparent"
                            FontWeight="Bold"
                            Cursor="Hand"/>

                    <Button Content="Supprimer"
                            Click="DeleteButton_Click"
                            Width="120"
                            Padding="5"
                            Background="#dc3545"
                            Foreground="White"
                            BorderBrush="Transparent"
                            FontWeight="Bold"
                            Cursor="Hand"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>

</Page>
