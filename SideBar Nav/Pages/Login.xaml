<Window x:Class="TheClassMain.Pages.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:pages="clr-namespace:TheClassMain.Pages"
    xmlns:materialIcons="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="380"
    Width="380" Height="450"
    Background="Transparent" AllowsTransparency="True"
    ResizeMode="NoResize" WindowStyle="None"
    MouseDown="Login_OnMouseDown"
    Title="Login">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border CornerRadius="10" Grid.RowSpan="2">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#7be9f6" Offset="0.0" />
                        <GradientStop Color="#f083da" Offset="1" />
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <StackPanel VerticalAlignment="Center">
                <materialIcons:MaterialIcon Kind="AccountCircle"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Center"
                                            Width="80"
                                            Foreground="White" />
                <TextBlock Text="Login"
                           FontWeight="Light"
                           FontFamily="Helvetica"
                           FontSize="22"
                           Foreground="White"
                           HorizontalAlignment="Center" />
            </StackPanel>

            <StackPanel Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <TextBox FontFamily="Helvetica"
                             FontWeight="Light"
                             Text="Username"
                             Name="UserName"
                             FontSize="20"
                             HorizontalAlignment="Center"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             Width="235"
                             HorizontalContentAlignment="Left"
                             Opacity="0.5"
                             Height="25"
                             Margin="63,0,0,0" />
                    <materialIcons:MaterialIcon Kind="Account"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Width="20"
                                                Foreground="White" />
                </StackPanel>

                <Border Width="250" Height="2" Background="White" Opacity="0.5" />

                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <PasswordBox FontFamily="Helvetica"
                                 FontWeight="Light"
                                 Password="Password"
                                 Name="Password"
                                 FontSize="20"
                                 HorizontalAlignment="Center"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White"
                                 Width="235"
                                 HorizontalContentAlignment="Left"
                                 Opacity="0.5"
                                 Height="25"
                                 Margin="63,0,0,0" />
                    <materialIcons:MaterialIcon Kind="Password"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                Width="20"
                                                Foreground="White" />
                </StackPanel>

                <Border Width="250" Height="2" Background="White" Opacity="0.5" />

                <StackPanel Orientation="Horizontal" Margin="0,50,0,0">
                    <Button Width="100" Height="40" Content="LOGIN" Margin="60,0,60,0" Click="Login_Click" Style="{StaticResource CustomButtonStyle}"/>
                    <Button Width="100" Height="40" Content="REGISTER" Click="Register_Click" Style="{StaticResource CustomButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
