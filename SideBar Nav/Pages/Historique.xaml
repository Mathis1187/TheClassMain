<Page x:Class="TheClassMain.Pages.Historique"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheClassMain.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Historique">

    <Grid Background="#f1f3f5">
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="121*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Historique26xxx" FontFamily="ubuntu" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="#FFB197FC" FontSize="60" FontWeight="Bold" Margin="240,10,0,0"/>
        <ListView ItemsSource="{Binding toutttlesfactures}" Margin="0,36,0,-123" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Numero" DisplayMemberBinding="{Binding UserFactureId}" />
                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding Description}" />
                    <GridViewColumn Header="Montant" DisplayMemberBinding="{Binding Montant }" />
                    <GridViewColumn Header="Categorie" DisplayMemberBinding="{Binding Categorie.Name}" />
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>

</Page>
