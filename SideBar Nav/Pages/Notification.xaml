<Page x:Class="TheClassMain.Pages.Notification"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:vm="clr-namespace:TheClassMain.ViewModel"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Notification">

    <Grid Background="#f1f3f5">
        <StackPanel Margin="20">
            
            <TextBlock Text="Factures à venir" FontFamily="Ubuntu" FontSize="30" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListView ItemsSource="{Binding UpcomingFactures}" Margin="0,0,0,30">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="{Binding Description}" FontWeight="Bold" />
                            <TextBlock Text="{Binding Date, StringFormat='dd/MM/yyyy'}" />
                            <TextBlock Text="{Binding Montant, StringFormat='{}{0:C}'}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>


            <TextBlock Text="Factures en retard" FontFamily="Ubuntu" FontSize="30" FontWeight="Bold" Margin="0,0,0,10"/>
            <ListView ItemsSource="{Binding ExpiredFactures}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="{Binding Description}" FontWeight="Bold" />
                            <TextBlock Text="{Binding Date, StringFormat='dd/MM/yyyy'}" />
                            <TextBlock Text="{Binding Montant, StringFormat='{}{0:C}'}" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackPanel>
    </Grid>
</Page>
