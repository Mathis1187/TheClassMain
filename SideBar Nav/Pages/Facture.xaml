<Page x:Class="TheClassMain.Pages.Facture"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TheClassMain.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Factures" Background="#e9ecef">

    <Grid x:Name="Form">

        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Grid Width="150" Height="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Border CornerRadius="10" BorderBrush="Black" Background="LightGray">
                    <TextBox x:Name="NameFactureInput" BorderBrush="Transparent" Background="Transparent" VerticalAlignment="Center" Height="30" HorizontalAlignment="Stretch" />
                </Border>
                <TextBlock x:Name="Placeholder" Text="num/name" Foreground="Black" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="False"/>
            </Grid>
            <Border CornerRadius="10" Background="Black" Width="70" Height="30" Margin="5">
                <Button BorderBrush="Transparent" Content="Search" Background="Transparent" Foreground="White"/>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="400" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="1" Width="200" CornerRadius="10" Background="Green">
                    <ListBox x:Name="FacturesListBox" Width="200" Background="Transparent" BorderBrush="Transparent"/>
                </Border>
            </Grid>
        </StackPanel>

        <Border Grid.Row="3" CornerRadius="20" Background="LightGray" Width="470">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                    <TextBlock Text="Description: " VerticalAlignment="Center"/>
                    <Border CornerRadius="10" BorderBrush="Black" Background="White" Width="250" Height="30">
                        <TextBox x:Name="DescriptionTextBox" Background="Transparent" BorderBrush="Transparent" VerticalContentAlignment="Center" Margin="5"/>
                    </Border>
                    <Border CornerRadius="10" Background="Black" Width="70" Height="30" Margin="5">
                        <Button BorderBrush="Transparent" Content="Ajouter" Background="Transparent" Foreground="White" Click="Button_Click"/>
                    </Border>
                </StackPanel>

                <Border CornerRadius="20" Background="LightGray" Margin="10,10,10,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Montant: " VerticalAlignment="Center"/>
                        <TextBox x:Name="MontantTextBox" Width="Auto" MinWidth="30" Height="20" VerticalAlignment="Bottom" HorizontalAlignment="Center" Foreground="Black" Background="Transparent" BorderBrush="Black" TextAlignment="Center" Margin="5"/>

                        <TextBlock Text=" - Categorie " VerticalAlignment="Center"/>
                        <ComboBox x:Name="MyComboBox" SelectionChanged="MyComboBox_SelectionChanged" Width="80" Height="25" Margin="5" >
                            <ComboBoxItem Content="Option 1"/>
                            <ComboBoxItem Content="Option 2"/>
                            <ComboBoxItem Content="Option 3"/>
                        </ComboBox>

                        <TextBlock Text=" - Date " VerticalAlignment="Center"/>
                        <DatePicker Name="DateFacturePicker" Width="102" Margin="5"/>


                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>
