<Page x:Class="TheClassMain.Pages.FactureDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TheClassMain.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FactureDetails">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Détails de la facture" FontSize="20" FontWeight="Bold" Margin="10"/>
            <TextBlock Text="{Binding Description}" FontSize="16"/>
            <TextBlock Text="{Binding Montant, StringFormat=N2}" FontSize="16" Foreground="Green"/>
            <TextBlock Text="{Binding Date, StringFormat=d}" FontSize="16" FontStyle="Italic"/>
            <TextBlock Text="{Binding CategorieName}" FontSize="16" FontStyle="Italic"/>
            <Button Content="Retour" Click="Retour_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Page>
